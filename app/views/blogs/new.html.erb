<%= form_for(@blogs) do |blog| %>
    <h1>Create your article on my blog :</h1>
    <div class="form-group">
        <label for="blog_author">Name of the author :</label>
        <%= blog.text_field :author %>
    </div>
    <div class="form-group">
        <label for="blog_title">Title of the article :</label>
        <%= blog.text_field :title %>
    </div>
    <div class="form-group">
        <label for="blog_content">What do you want to share with us ? :</label>
        <%= blog.text_area :content %>
    </div>
    <button type="submit" class="btn btn-info">Add</button>
<% end %>